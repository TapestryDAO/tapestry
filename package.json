{
  "name": "solana-tapestry",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/TapestryDAO/tapestry"
  },
  "homepage": ".",
  "scripts": {
    "setup": "yarn setupjs && yarn setuppy && yarn setuprs && yarn alljs:build",
    "setuprs": "yarn meta:install && yarn program:build",
    "setuppy": "poetry install",
    "setupjs": "yarn install && cd app && yarn install && cd ../client && yarn install",
    "verify": "yarn alljs:build && yarn program:build && yarn program:test",
    "program:build": "cd program && cargo build-bpf",
    "program:test": "cd program && cargo test-bpf",
    "client:build": "cd client && yarn build",
    "client:test": "cd client && yarn test",
    "app:build": "cd app && yarn build",
    "app:start": "cd app && yarn start",
    "localnet:fresh": "python -u scripts/reload_sim.py",
    "localnet:up": "python -u scripts/start_test_validator.py",
    "localnet:logs": "solana logs -u localhost",
    "alljs:build": "yarn client:build && yarn app:build && tap --help",
    "meta:install": "python -u scripts/custom_deps.py"
  },
  "dependencies": {
    "bs58": "^4.0.1",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@solana/web3.js": "^1.31.0",
    "@types/bs58": "^4.0.1",
    "@types/node": "^17.0.8",
    "@types/yargs": "^17.0.8",
    "axios": "^0.24.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  }
}