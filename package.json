{
  "name": "solana-tapestry",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/TapestryDAO/tapestry"
  },
  "homepage": ".",
  "scripts": {
    "setup": "yarn setupjs && yarn setuppy && yarn setuprs",
    "setuprs": "yarn meta:install --build && yarn tap:prog:build && yarn meta:install --deploy",
    "setuppy": "poetry install",
    "setupjs": "yarn install && yarn tap:client:setup && yarn tap:app:setup",
    "tap:build": "yarn tap:prog:build && yarn tap:client:build && yarn tap:app:build",
    "tap:test": "yarn tap:prog:test && echo \"You should probably make more tests...\"",
    "tap:prog:build": "cd tapestry/program && cargo build-bpf",
    "tap:prog:test": "cd tapestry/program && cargo test-bpf",
    "tap:client:setup": "cd tapestry/client && yarn install",
    "tap:client:build": "cd tapestry/client && yarn build",
    "tap:client:testt": "cd tapestry/cient && yarn test",
    "tap:app:setup": "cd tapestry/app && yarn install",
    "tap:app:build": "cd tapestry/app && yarn build",
    "tap:app:start": "cd tapestry/app && yarn start",
    "localnet:fresh": "python -u scripts/fresh_validator.py",
    "localnet:up": "python -u scripts/start_test_validator.py",
    "localnet:logs": "solana logs -u localhost",
    "meta:install": "python -u scripts/custom_deps.py"
  },
  "dependencies": {
    "bs58": "^4.0.1",
    "jimp": "^0.16.1",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@solana/web3.js": "^1.31.0",
    "@types/bs58": "^4.0.1",
    "@types/jimp": "^0.2.28",
    "@types/node": "^17.0.8",
    "@types/yargs": "^17.0.8",
    "axios": "^0.24.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  }
}
